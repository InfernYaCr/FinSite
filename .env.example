# Copy this file to .env and adjust as needed
# Default local Postgres (see docker-compose.yml)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/app?schema=public"

# Public base URL exposed to the client (keep in sync with SITE_URL)
NEXT_PUBLIC_SITE_URL="http://localhost:3000"

# Base site URL used for SEO (sitemap, canonical, OpenGraph) on the server
SITE_URL="http://localhost:3000"

# Analytics integrations (require explicit enable flags + consent to load)
NEXT_PUBLIC_ANALYTICS_GA4_ENABLED="false"
NEXT_PUBLIC_ANALYTICS_GA4_MEASUREMENT_ID=""
NEXT_PUBLIC_ANALYTICS_META_PIXEL_ENABLED="false"
NEXT_PUBLIC_ANALYTICS_META_PIXEL_ID=""
NEXT_PUBLIC_ANALYTICS_YANDEX_METRICA_ENABLED="false"
NEXT_PUBLIC_ANALYTICS_YANDEX_METRICA_ID=""

